{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "weremain-app",
      "host": { }
    },
  ],
  "containerDefinitions": [
    {
      "name": "weremain",
      "image": "node:latest",
      "environment": [
        { "NODE_EV" : "production" }      
      ],
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 8080
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "weremain-app",
          "containerPath": "/var/www/weremain-app"
        }
      ],
      "entryPoint": ["bin/sh", "aws-bootstrap.sh"],
      "essential": true
    }
  ]
}
