{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "weremain-app",
      "host": {
        "sourcePath": "/var/app/current/weremain-app"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "php-app",
      "image": "node:latest",
      "environment": [
        { "NODE_EV" : "production" }      
      ],
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "weremain-app",
          "containerPath": "/var/www/weremain-app",
          "readOnly": true
        }
      ],
      "entryPoint": ["bin/sh", "aws-bootstrap.sh"],
      "essential": true
    }
  ]
}
